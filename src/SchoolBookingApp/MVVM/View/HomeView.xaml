<UserControl x:Class="SchoolBookingApp.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:SchoolBookingApp.MVVM.View"
             xmlns:viewmodel="clr-namespace:SchoolBookingApp.MVVM.Viewmodel"
             xmlns:converter="clr-namespace:SchoolBookingApp.MVVM.Converters"
             xmlns:controls="clr-namespace:SchoolBookingApp.MVVM.CustomControls"
             d:DataContext="{d:DesignInstance viewmodel:HomeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:PercentageToWidthConverter x:Key="PercentageToWidthConverter"/>
    </UserControl.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal">
            <controls:DataBox Title="{Binding TotalStudentsText}"
                              Number="{Binding StudentsCount}"/>
            <controls:DataBox Title="{Binding TotalBookingsText}"
                              Number="{Binding BookingsCount}"/>
            <controls:DataBox Title="{Binding TotalParentsText}"
                              Number="{Binding ParentsCount}"/>
        </StackPanel>
    </DockPanel>
</UserControl>
