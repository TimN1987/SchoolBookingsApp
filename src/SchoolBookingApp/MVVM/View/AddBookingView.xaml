<UserControl x:Class="SchoolBookingApp.MVVM.View.AddBookingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolBookingApp.MVVM.View"
             xmlns:viewmodel="clr-namespace:SchoolBookingApp.MVVM.Viewmodel"
             xmlns:converters="clr-namespace:SchoolBookingApp.MVVM.Converters"
             xmlns:controls="clr-namespace:SchoolBookingApp.MVVM.CustomControls"
             d:DataContext="{d:DesignInstance viewmodel:AddBookingViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BooleanInverterConverter x:Key="BooleanInverterConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Viewbox Stretch="Fill">
        <Grid Background="#101010"
              Width="800"
              Height="450">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <Grid Grid.Column="0" Grid.ColumnSpan="2"
                  Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Content="{Binding ShowHideDataButtonLabel}"
                        Command="{Binding ToggleBookingDataVisibilityCommand}"
                        IsEnabled="{Binding IsCommentsVisible,
                                    Converter={StaticResource BooleanInverterConverter}}"
                        Style="{DynamicResource ShowDataCommentsButtonStyle}"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding PageTitle}"
                           Style="{DynamicResource TitleText}"/>
                <Button Grid.Column="2" 
                        Content="{Binding ShowHideCommentsButtonLabel}"
                        Command="{Binding ToggleCommentsVisibilityCommand}"
                        IsEnabled="{Binding IsBookingDataVisible, 
                                    Converter={StaticResource BooleanInverterConverter}}"
                        Style="{DynamicResource ShowDataCommentsButtonStyle}"/>
            </Grid>
            <TextBlock Grid.Column="0"
                       Grid.Row="1"
                       Text="{Binding SelectBookingLabel}"
                       Style="{DynamicResource SubtitleText}"/>
            <TextBlock Grid.Column="1"
                       Grid.Row="1"
                       Text="{Binding SelectStudentLabel}"
                       Style="{DynamicResource SubtitleText}"/>
            <ComboBox Grid.Column="0"
                          Grid.Row="2"
                          ItemsSource="{Binding AllBookings}"
                      SelectedItem="{Binding Booking}"/>
            <ComboBox Grid.Column="1"
                          Grid.Row="2"
                          ItemsSource="{Binding AllStudents}"
                      SelectedItem="{Binding SelectedStudent}"/>
            <TextBlock Grid.Column="0"
                           Grid.Row="3"
                           Text="{Binding FirstNameLabel}"
                       Style="{DynamicResource SubtitleText}"/>
            <TextBlock Grid.Column="1"
                           Grid.Row="3"
                           Text="{Binding LastNameLabel}"
                       Style="{DynamicResource SubtitleText}"/>
            <TextBox Grid.Column="0"
                         Grid.Row="4"
                         Text="{Binding FirstName, Mode=OneWay}"
                     IsReadOnly="True"
                     Style="{DynamicResource DataFieldTextBoxStyle}"/>
            <TextBox Grid.Column="1"
                     Grid.Row="4"
                     Text="{Binding LastName, Mode=OneWay}"
                     IsReadOnly="True"
                     Style="{DynamicResource DataFieldTextBoxStyle}"/>
            <TextBlock Grid.Column="0"
                       Grid.Row="5"
                       Text="{Binding DateTimeLabel}"
                       Style="{DynamicResource SubtitleText}"/>
            <TextBlock Grid.Column="1"
                       Grid.Row="5"
                       Text="{Binding ParentsLabel}"
                       Style="{DynamicResource SubtitleText}"/>
            <controls:DateTimePicker Grid.Column="0"
                                     Grid.Row="6"
                                     BookingDateTime="{Binding DateTime}"/>
            <ListBox Grid.Column="1"
                     Grid.Row="6"
                     ItemsSource="{Binding Parents, Mode=OneWay}"
                     Style="{DynamicResource ParentsListBox}"/>
            <Grid Grid.Column="0" Grid.ColumnSpan="2"
              Grid.Row="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Content="{Binding AddUpdateButtonLabel}"
                        Command="{Binding AddUpdateBookingCommand}"
                        Style="{DynamicResource StandardSelectionButtonStyle}"/>
                <Button Grid.Column="1"
                        Content="{Binding DeleteBookingButtonLabel}"
                        Command="{Binding DeleteBookingCommand}"
                        Style="{DynamicResource StandardSelectionButtonStyle}"/>
                <Button Grid.Column="2"
                        Content="{Binding ClearFormButtonLabel}"
                        Command="{Binding ClearFormCommand}"
                        Style="{DynamicResource StandardSelectionButtonStyle}"/>
            </Grid>
            <Viewbox Grid.Column="0" Grid.ColumnSpan="2"
                     Grid.Row="1" Grid.RowSpan="5"
                     Stretch="Uniform"
                     Margin="20,0"
                     Visibility="{Binding IsBookingDataVisible, 
                                Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border Background="#202020"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Viewbox Grid.Column="0"
                             Grid.Row="0">
                            <TextBlock Text="{Binding MathLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="0">
                            <Slider Value="{Binding Math, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="1">
                            <TextBlock Text="{Binding MathCommentsLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0" Grid.ColumnSpan="2"
                             Grid.Row="2">
                            <TextBox Text="{Binding MathComments, Mode=TwoWay}"
                                 Style="{DynamicResource DataFieldTextBoxStyle}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="3">
                            <TextBlock Text="{Binding ReadingLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="3">
                            <Slider Value="{Binding Reading, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="4">
                            <TextBlock Text="{Binding ReadingCommentsLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0" Grid.ColumnSpan="2"
                             Grid.Row="5">
                            <TextBox Text="{Binding ReadingComments, Mode=TwoWay}"
                                 Style="{DynamicResource DataFieldTextBoxStyle}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="6">
                            <TextBlock Text="{Binding WritingLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="6">
                            <Slider Value="{Binding Writing, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="7">
                            <TextBlock Text="{Binding WritingCommentsLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0" Grid.ColumnSpan="2"
                             Grid.Row="8">
                            <TextBox Text="{Binding WritingComments, Mode=TwoWay}"
                                 Style="{DynamicResource DataFieldTextBoxStyle}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="9">
                            <TextBlock Text="{Binding ScienceLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="9">
                            <Slider Value="{Binding Science, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="10">
                            <TextBlock Text="{Binding HistoryLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="10">
                            <Slider Value="{Binding History, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="11">
                            <TextBlock Text="{Binding GeographyLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="11">
                            <Slider Value="{Binding Geography, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="12">
                            <TextBlock Text="{Binding MFLLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="12">
                            <Slider Value="{Binding MFL, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="13">
                            <TextBlock Text="{Binding PELabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="13">
                            <Slider Value="{Binding PE, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="14">
                            <TextBlock Text="{Binding ArtLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="14">
                            <Slider Value="{Binding Art, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="15">
                            <TextBlock Text="{Binding MusicLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="15">
                            <Slider Value="{Binding Music, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="16">
                            <TextBlock Text="{Binding RELabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="16">
                            <Slider Value="{Binding RE, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="17">
                            <TextBlock Text="{Binding DesignTechnologyLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="17">
                            <Slider Value="{Binding DesignTechnology, Mode=TwoWay}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="0"
                             Grid.Row="18">
                            <TextBlock Text="{Binding ComputingLabel}"
                                   Style="{DynamicResource SubtitleText}"/>
                        </Viewbox>
                        <Viewbox Grid.Column="1"
                             Grid.Row="18">
                            <Slider Value="{Binding Computing, Mode=TwoWay}"/>
                        </Viewbox>
                    </Grid>
                </Border>
            </Viewbox>
            <Viewbox Grid.Column="0" Grid.ColumnSpan="2"
                 Grid.Row="1" Grid.RowSpan="5"
                 Margin="20,0"
                 Visibility="{Binding IsCommentsVisible, 
                                Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border Background="#202020"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="10">
                    <Grid></Grid>
                </Border>
            </Viewbox>
        </Grid>
    </Viewbox>
</UserControl>
