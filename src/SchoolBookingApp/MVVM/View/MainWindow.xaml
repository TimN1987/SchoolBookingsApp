<Window x:Class="SchoolBookingApp.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:SchoolBookingApp.MVVM.View"
        xmlns:viewmodel="clr-namespace:SchoolBookingApp.MVVM.Viewmodel"
        xmlns:converter="clr-namespace:SchoolBookingApp.MVVM.Converters"
        d:DataContext="{d:DesignInstance viewmodel:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <converter:ViewToEnabledConverter x:Key="ViewToEnabledConverter"/>
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <Button Content="{Binding HomeButtonText, Mode=OneWay}"
                    Style="{DynamicResource MainWindowNavigationButton}"
                    IsEnabled="{Binding CurrentView, Converter={StaticResource ViewToEnabledConverter}, ConverterParameter={x:Type view:HomeView}}"/>
        </StackPanel>
        <ContentControl Content="{Binding CurrentView, Mode=OneWay}"
                        Style="{DynamicResource MainWindow}"/>
    </DockPanel>
</Window>
