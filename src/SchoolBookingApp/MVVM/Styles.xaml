<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- MainWindow dockpanel background style -->
    <Style TargetType="{x:Type DockPanel}" x:Key="MainWindowDockPanelBackground">
        <Setter Property="Background" Value="DarkSlateGray"/>
    </Style>
    <!-- MainWindow stackpanel style -->
    <Style TargetType="{x:Type StackPanel}" x:Key="MainWindowButtonStackPanel">
        <Setter Property="Background" Value="SlateGray"/>
    </Style>
    <!-- MainWindow contentcontrol style -->
    <Style TargetType="{x:Type ContentControl}" x:Key="MainWindowContentControl">
        <Setter Property="Background" Value="SlateGray"/>
    </Style>
    <!-- MainWindow navigation button style -->
    <Style TargetType="{x:Type Button}" x:Key="MainWindowNavigationButton">
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="MinHeight" Value="75"/>
    </Style>
</ResourceDictionary>