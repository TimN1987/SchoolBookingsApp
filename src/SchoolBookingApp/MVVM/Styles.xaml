<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- MainWindow stackpanel style -->
    <Style TargetType="{x:Type StackPanel}" x:Key="MainWindowButtonStackPanel">
        <Setter Property="Background" Value="Black"/>
    </Style>
    <!-- MainWindow contentcontrol style -->
    <Style TargetType="{x:Type ContentControl}" x:Key="MainWindowContentControl">
        <Setter Property="Background" Value="SlateGray"/>
    </Style>
    <!-- MainWindow navigation button style -->
    <Style TargetType="{x:Type Button}" x:Key="MainWindowNavigationButton">
        <Setter Property="Width" Value="150"/>
        <Setter Property="MinHeight" Value="50"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#01000000"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="20, 5, 20, 5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid x:Name="rootGrid">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="5">
                            <Grid x:Name="contentGrid">
                                <Grid.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Grid.RenderTransform>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <Image x:Name="icon"
                                       Grid.Column="0"
                                       Source="{TemplateBinding Content}"
                                       Width="40" Height="40"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="5"/>
                                <TextBlock x:Name="title"
                                           Grid.Column="1"
                                           Text="{TemplateBinding Tag}"
                                           FontSize="20"
                                           FontFamily="Arial"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="0,5"/>
                            </Grid>
                        </Border>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="contentGrid"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         To="1.1"
                                                         Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="contentGrid"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                         To="1.1"
                                                         Duration="0:0:0.2"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="contentGrid"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         To="0.9"
                                                         Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="contentGrid"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                         To="0.9"
                                                         Duration="0:0:0.3"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="icon"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.3"
                                                         Duration="0"/>
                                        <ColorAnimation Storyboard.TargetName="title"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                        To="Gray"
                                                        Duration="0"/>
                                        <DoubleAnimation Storyboard.TargetName="title"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.5"
                                                         Duration="0"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>