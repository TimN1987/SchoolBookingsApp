<UserControl x:Class="SchoolBookingApp.MVVM.CustomControls.MainNavigationButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolBookingApp.MVVM.CustomControls"
             mc:Ignorable="d" 
             x:Name="root">
    <Button>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
                   Source="{Binding Icon, ElementName=root}"
                   Margin="5"/>
            <TextBlock Grid.Column="1"
                       Text="{Binding TargetView, ElementName=root}"
                       Margin="0, 5"/>
        </Grid>
    </Button>
</UserControl>
