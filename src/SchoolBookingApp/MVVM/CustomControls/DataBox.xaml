<UserControl x:Class="SchoolBookingApp.MVVM.CustomControls.DataBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolBookingApp.MVVM.CustomControls"
             mc:Ignorable="d"
             x:Name="root">
        <Border CornerRadius="8"
            BorderBrush="Gray"
            BorderThickness="1"
            Padding="8"
            Margin="4"
            Background="{Binding Background, ElementName=root}">
            <StackPanel>
                <TextBlock Text="{Binding Title, ElementName=root}" 
                       FontWeight="Bold"
                       FontSize="14"/>
                <TextBlock Text="{Binding Number, ElementName=root}" 
                       FontSize="18"/>
            </StackPanel>
        </Border>
    </UserControl>
