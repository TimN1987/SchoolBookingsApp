<UserControl x:Class="SchoolBookingApp.MVVM.CustomControls.BookingsPieChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolBookingApp.MVVM.CustomControls"
             xmlns:converters="clr-namespace:SchoolBookingApp.MVVM.Converters"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">
    <UserControl.Resources>
        <converters:PercentageToPieChartPathConverter x:Key="PercentageToPieChartPathConverter"/>
        <converters:PercentageToLabelPositionConverter x:Key="PercentageToLabelPositionConverter"/>
        <s:Boolean x:Key="True">True</s:Boolean>
        <s:Boolean x:Key="False">False</s:Boolean>
    </UserControl.Resources>
    <Grid Width="200"
          Height="250">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="175"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Column="0" Grid.ColumnSpan="2"
                Grid.Row="0">
            <Path Stroke="White" Fill="{Binding BookedColor, ElementName=root}"
                  Data="{Binding BookedPercentage, ElementName=root, 
                        Converter={StaticResource PercentageToPieChartPathConverter}, 
                        ConverterParameter={StaticResource True}}"/>
            <Path Stroke="White" Fill="{Binding UnbookedColor, ElementName=root}"
                  Data="{Binding UnbookedPercentage, ElementName=root, 
                            Converter={StaticResource PercentageToPieChartPathConverter}, 
                            ConverterParameter={StaticResource False}}"/>
            <TextBlock Canvas.Top="{Binding BookedPercentage, ElementName=root, 
                                    Converter={StaticResource PercentageToLabelPositionConverter}, 
                                    ConverterParameter=YB}"
                       Canvas.Left="{Binding BookedPercentage, ElementName=root, 
                                    Converter={StaticResource PercentageToLabelPositionConverter}, 
                                    ConverterParameter=XB}"
                       Text="{Binding BookedPercentage, ElementName=root, StringFormat={}{0:F0}%}"
                       Foreground="White"
                       FontSize="14"
                       FontFamily="Arial"
                       Height="20"
                       Width="40"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TranslateTransform X="-20" Y="-10"/>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Canvas.Top="{Binding UnbookedPercentage, ElementName=root, 
                                     Converter={StaticResource PercentageToLabelPositionConverter}, 
                                     ConverterParameter=YU}"
                       Canvas.Left="{Binding UnbookedPercentage, ElementName=root, 
                                     Converter={StaticResource PercentageToLabelPositionConverter}, 
                                      ConverterParameter=XU}"
                       Text="{Binding UnbookedPercentage, ElementName=root, StringFormat={}{0:F0}%}"
                       Foreground="White"
                       FontSize="14"
                       FontFamily="Arial"
                       Height="20"
                       Width="40"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TranslateTransform X="-20" Y="-10"/>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Canvas>
        <Rectangle Grid.Column="0"
                   Grid.Row="1"
                   Width="20"
                   Height="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Fill="{Binding BookedColor, ElementName=root}"/>
        <Rectangle Grid.Column="0"
                   Grid.Row="2"
                   Width="20"
                   Height="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Fill="{Binding UnbookedColor, ElementName=root}"/>
        <TextBlock Grid.Column="1"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   Text="Students booked"
                   FontSize="14"
                   FontFamily="Arial"
                   Foreground="White"/>
        <TextBlock Grid.Column="1"
                   Grid.Row="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   Text="Students not booked"
                   FontSize="14"
                   FontFamily="Arial"
                   Foreground="White"/>
    </Grid>
</UserControl>
